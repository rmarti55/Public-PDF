// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Document {
  id            String        @id @default(cuid())
  title         String
  description   String?
  category      String?
  fileName      String
  filePath      String
  thumbnailUrl  String?       // Thumbnail image from first page of PDF
  extractedText String        @db.Text // For LLM context
  context       String?       @db.Text // Rich HTML context/background
  published     Boolean       @default(false)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  messages      ChatMessage[]
  pageChunks    PageChunk[]
}

model PageChunk {
  id          String   @id @default(cuid())
  documentId  String
  document    Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  pageNumber  Int
  content     String   @db.Text
  embedding   Json     // Vector embedding stored as JSON array
  createdAt   DateTime @default(now())

  @@index([documentId])
}

model ChatMessage {
  id         String   @id @default(cuid())
  documentId String
  document   Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  role       String   // "user" or "assistant"
  content    String   @db.Text
  createdAt  DateTime @default(now())

  @@index([documentId])
}

model AdminUser {
  id           String   @id @default(cuid())
  username     String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
}
